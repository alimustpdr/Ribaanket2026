# RİBA Anket Sistemi - Nginx Yapılandırması
# AA Panel veya Google Cloud için örnek yapılandırma

server {
    listen 80;
    listen [::]:80;
    server_name your-domain.com www.your-domain.com;
    
    # HTTP'den HTTPS'e yönlendirme (SSL aktif olduğunda)
    # return 301 https://$server_name$request_uri;
    
    root /home/your-user/ribaanket2026/public;
    index index.php index.html;
    
    # Log dosyaları
    access_log /var/log/nginx/riba-access.log;
    error_log /var/log/nginx/riba-error.log;
    
    # Maksimum yükleme boyutu
    client_max_body_size 10M;
    
    # Güvenlik başlıkları
    add_header X-XSS-Protection "1; mode=block" always;
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    
    # Gzip sıkıştırma
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_types text/plain text/css text/xml text/javascript application/javascript application/json application/xml;
    
    # Health check endpoint
    location = /health {
        access_log off;
        return 200 "ok\n";
        add_header Content-Type text/plain;
    }
    
    # Statik dosyalar (varsa)
    location ~* \.(jpg|jpeg|png|gif|ico|css|js|svg|woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        access_log off;
    }
    
    # PDF dosyaları (storage/pdfs'den servis edilir, direkt erişim yok)
    # location ~* \.pdf$ {
    #     deny all;
    # }
    
    # Ana routing - tüm istekleri index.php'ye yönlendir
    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }
    
    # PHP-FPM yapılandırması
    location ~ \.php$ {
        fastcgi_pass unix:/var/run/php/php8.1-fpm.sock; # PHP versiyonunuza göre ayarlayın
        fastcgi_index index.php;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include fastcgi_params;
        
        # Timeout ayarları
        fastcgi_read_timeout 300;
        fastcgi_send_timeout 300;
        
        # Buffer ayarları
        fastcgi_buffer_size 128k;
        fastcgi_buffers 4 256k;
        fastcgi_busy_buffers_size 256k;
    }
    
    # Hassas dosyaları engelle
    location ~ /\.(env|htaccess|git) {
        deny all;
        return 404;
    }
    
    # storage klasörüne direkt erişimi engelle (PDF'ler hariç, onlar index.php üzerinden servis edilir)
    location ~ ^/storage/ {
        deny all;
        return 404;
    }
}

